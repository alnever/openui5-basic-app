{
	"_version": "1.12.0",
	"sap.app": {
		"id": "bookstore",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"resources": "resources.json",
		"ach": "ach",
		"dataSources": {
			"mainService": {
				"uri": "http://localhost:8010/proxy",
				"type": "OData",
				"settings":{
					"odataVersion": "2.0.0",
					"preload": true
				}
			}
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "bookstore.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"dependencies": {
			"minUI5Version": "1.60.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "bookstore.i18n.i18n"
				}
			},
			"data": {
				"type": "sap.ui.model.odata.v2.ODataModel",
				"dataSource": "mainService"
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "bookstore.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "app",
					"view": "App",
					"targetControl": "app",
					"subroutes": [
						{
							"pattern": "",
							"name": "home",
							"target": "home",
							"subroutes":[
								{
									"pattern": "/books",
									"name": "books",
									"target": "books"
								}
							]

						}
					]
				}
			],
			"targets" : {
				"home": {
					"viewName": "Home",
					"targetAggregation": "pages",
					"targetControl": "page"
				},
				"books": {
					"viewName": "Books",
					"targetAggregation": "content"
				}
			}
		}
	}
}
